/*
 *
 */
QAbstractButton {
    outline: none;
}

QToolButton {
    border: none;
    min-width: 56dp;
    min-height: 56dp;
    icon-size: 24dp;
    background-color: transparent;
}

QToolButton:checked, QPushButton:checked {
    background-color: rgba(204, 204, 204, 155);
}

QToolButton:pressed, QPushButton:pressed {
    background-color: rgba(221, 221, 221, 155);
}

QProgressBar {
    border-radius: 0px;
    border: none;
    background-color: #DDF0DD;
    max-height: 5dp;
}

QProgressBar::chunk {
    background-color: #4CAF50;
}

QPushButton[side-nav-name=true] {
    border: none;
    height: 48dp;
    icon-size: 24dp;
    padding-left: 16dp;
    color: rgba(0, 0, 0, 138);
    text-align: left;
    font-weight: 500;
}

QPushButton[side-nav-item=true] {
    border: none;
    height: 48dp;
    icon-size: 24dp;
    padding-left: 16dp;
    text-align: left;
    font-weight: 500;
}

QPushButton[side-nav-subheader=true] {
    border: none;
    border-top: 1px solid #E4E4E4;
    height: 48dp;
    padding-left: 16dp;
    color: rgba(0, 0, 0, 138);
    text-align: left;
    font-weight: 500;
}

QPushButton[flat=true] {
    min-width: 88dp;
    height:36dp;
    border: none;
    color: #4CAF50;
    font-weight: 500;
}

QPushButton:disabled[flat=true] {
    color: rgba(0, 0, 0, 80);
}

QPushButton[raised=true] {
    min-width: 88dp;
    height:36dp;
    border: 1px solid #BCBCBC;
    font-weight: 500;
}

QPushButton:default[raised=true] {
    background-color: #4CAF50;
    color: white;
}

QPushButton:disabled[raised=true] {
    background-color: rgba(0, 0, 0, 25);
    color: rgba(0, 0, 0, 80);
}

QPushButton:hover[flat=true], QPushButton:hover:!default[raised=true] {
    background-color: rgba(204, 204, 204, 155);
}

QFrame[toolbar=true] {
    background-color: #4CAF50;
}

QFrame[side-nav=true] {
    background-color: white;
}

QFrame[content-container=true] {
    background-color: palette(base);
}


/*
 * Стили лайтбокса
 */
[lightBoxDialogTitle=true] {
    font-weight: 500;
    font-size: 20pt;
    background-color: white;
    padding: 24dp 24dp 0dp 24dp;
    border: none;
}

[lightBoxDialogCentralWidget=true] {
    background-color: white;
    border: none;
    padding: 20dp 24dp 8dp 24dp;
}

[lightBoxMessageIcon=true] {
    width: 0dp;
    height: 0dp;
}

[lightBoxMessageText=true] {
    padding: 0dp 0dp 24dp 0dp;
}
